# WJP ANALYSER Environment Variables
# ===================================
# Copy this file to .env and fill in your values

# Server Configuration
WJP_HOST=127.0.0.1
WJP_PORT=5000
WJP_DEBUG=false
WJP_ENVIRONMENT=development

# Security Configuration
WJP_SECRET_KEY=your-secret-key-here
WJP_JWT_SECRET_KEY=your-jwt-secret-key-here
WJP_MASTER_PASSWORD=your-master-password-here

# Database Configuration
WJP_DATABASE_TYPE=sqlite
WJP_DATABASE_HOST=localhost
WJP_DATABASE_PORT=5432
WJP_DATABASE_NAME=wjp_analyser
WJP_DATABASE_USERNAME=wjp_user
WJP_DATABASE_PASSWORD=your-database-password-here

# Redis Configuration
WJP_REDIS_HOST=localhost
WJP_REDIS_PORT=6379
WJP_REDIS_PASSWORD=your-redis-password-here

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OLLAMA_BASE_URL=http://localhost:11434

# Monitoring Configuration
WJP_PROMETHEUS_ENABLED=true
WJP_GRAFANA_ENABLED=true
WJP_ELK_ENABLED=true
WJP_JAEGER_ENABLED=true
